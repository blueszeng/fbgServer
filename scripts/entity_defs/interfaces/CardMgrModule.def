<root>
	<Implements>
	</Implements>

	<Properties>
       <cardID>
            <Type> UINT64 </Type>
			<Flags> BASE </Flags>
			<Persistent> true </Persistent>
        </cardID>

       <baseProp>
            <Type> PYTHON </Type>
			<Flags> CELL_PUBLIC </Flags>
        </baseProp>

       <cardDBIDList>
            <Type> ARRAY <of> UINT64 </of> </Type>
			<Flags> BASE </Flags>
			<Persistent> true </Persistent>
        </cardDBIDList>


	</Properties>

	<BaseMethods>
        <!--客户端请求所有的卡牌信息-->
        <onClientGetAllCardInfo>
            <Exposed/>
        </onClientGetAllCardInfo>

        <!--客户端请求升级卡牌信息-->
        <onClientLevelUp>
            <Exposed/>
            <Arg> UINT64 </Arg><!--球员ID-->
            <Arg> UINT64 </Arg><!--经验丹UUID-->
            <Arg> UINT32 </Arg><!--经验丹数量-->
        </onClientLevelUp>

	</BaseMethods>

	<CellMethods>

	</CellMethods>

	<ClientMethods>
        <onGetAllCardInfo>
            <Arg> ARRAY <of> Card_Info </of> </Arg>
        </onGetAllCardInfo>

        <!--球员操作回调-->
        <onBallerCallBack>
            <Arg> UINT32 </Arg>
        </onBallerCallBack>

        <onLevelMax>
            <Arg> UINT32 </Arg>
        </onLevelMax>

        <onCombineCardInfo>
            <Arg> Card_Info </Arg>
        </onCombineCardInfo>
	</ClientMethods>
</root>

